<robot name="rubot_custom">
  <material name="custom_color">
    <color rgba="0.8 0.1 0.1 1.0"/> <!-- Vermell -->
  </material>

  <link name="base_link">
    <visual>
      <origin rpy="0 0 0" xyz="0 0 0"/>
      <geometry>
        <mesh filename="file://$(find my_robot_description)/meshes/base_link.stl" scale="0.001 0.001 0.001"/>
      </geometry>
      <material name="custom_color"/>
    </visual>
  </link>
</robot>

<!-- Nova part 3D afegida a la part superior -->
<link name="top_part">
  <visual>
    <geometry>
      <cylinder length="0.05" radius="0.1"/>
    </geometry>
    <material name="yellow"/>
  </visual>
  <collision>
    <geometry>
      <cylinder length="0.05" radius="0.1"/>
    </geometry>
  </collision>
  <inertial>
    <mass value="0.1"/>
    <inertia ixx="0.0001" ixy="0" ixz="0" iyy="0.0001" iyz="0" izz="0.0001"/>
  </inertial>
</link>

<!-- UniÃ³ fixa amb el cos -->
<joint name="top_part_joint" type="fixed">
  <parent link="base_link"/>
  <child link="top_part"/>
  <origin rpy="0 0 0" xyz="0 0 0.1"/>
</joint>

